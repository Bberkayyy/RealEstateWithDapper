@model List<EstateAgentPanelResultLast5MessageViewModel>
<div class="nav-item dropdown">
    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
        <i class="fa fa-envelope me-lg-2"></i>
        <span class="d-none d-lg-inline-flex">Message</span>
    </a>
    <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
        @foreach (var item in Model)
        {
            int gün = (DateTime.Now - item.sendDate).Days;
            int saat = (DateTime.Now - item.sendDate).Hours;
            int dakika = (DateTime.Now - item.sendDate).Minutes;
            <a href="#" class="dropdown-item">
                <div class="d-flex align-items-center">
                    <img class="rounded-circle" src="~/dashmin-1.0.0/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                    <div class="ms-2">
                        <h6 class="fw-normal mb-0">@item.senderName</h6>
                        <p class="fw-normal mb-0">@item.subject</p>
                        <small>
                            @(gün != 0 ? $"{gün} gün önce" : saat != 0 ? $"{saat} saat {dakika} dakika önce" : $"{dakika} dakika önce")
                        </small>
                    </div>
                </div>
            </a>
            <hr class="dropdown-divider">
        }
        <a href="#" class="dropdown-item text-center">Hepsini Gör</a>
    </div>
</div>