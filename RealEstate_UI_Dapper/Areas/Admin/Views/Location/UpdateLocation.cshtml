@model AdminPanelUpdateLocationViewModel
@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
}
<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Lokasyon Güncelleme Sayfası</h6>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Şehir Adı</label>
                <input type="text" class="form-control" asp-for="City" />
            </div>
            <div class="mb-3">
                <label class="form-label">Şehir Görseli</label>
                <input type="text" class="form-control" asp-for="ImageUrl" />
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>

