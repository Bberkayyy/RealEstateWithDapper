@model List<AdminPanelResultLocationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
    int count = 0;
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Lokasyon Listesi</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Şehir Adı</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>
                            <img class="img-fluid" style="height:50px;width:80px;border-radius:50%" src="@item.imageUrl" alt="">
                            @item.city
                        </td>
                        <td><a href="/Admin/Location/DeleteLocation/@item.id" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/Location/UpdateLocation/@item.id" class="btn btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin/Location/CreateLocation/" class="btn btn-outline-primary">Lokasyon Ekle</a>
    </div>
</div>

