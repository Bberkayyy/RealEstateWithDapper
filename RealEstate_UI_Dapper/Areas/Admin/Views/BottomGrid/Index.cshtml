@model List<AdminPanelResultBottomGridViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
    int count = 0;
}


<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Hızlı Menü Listesi</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Açıklama</th>
                    <th scope="col">Icon Url </th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.title</td>
                        <td>@item.description</td>
                        <td>@item.icon</td>
                        <td><a href="/Admin/BottomGrid/DeleteBottomGrid/@item.id" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/BottomGrid/UpdateBottomGrid/@item.id" class="btn btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin/BottomGrid/CreateBottomGrid/" class="btn btn-outline-primary">Menü Başlığı Ekle</a>
    </div>
</div>

