@model AdminPanelUpdateBottomGridViewModel
@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
}
<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Hızlı Menü Ekleme Sayfası</h6>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label class="form-label">Başlık</label>
                <input type="text" class="form-control" asp-for="Title" />
            </div>
            <div class="mb-3">
                <label class="form-label">Açıklama</label>
                <input type="text" class="form-control" asp-for="Description" />
            </div>
            <div class="mb-3">
                <label class="form-label">Icon Url</label>
                <textarea rows="5" class="form-control" asp-for="Icon"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>