@model List<AdminPanelResultCategoryViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
    int count = 0;
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori Listesi</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kategori Adı</th>
                    <th scope="col">Durumu</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.name</td>
                        <td>@(item.status ? "Aktif" : "Pasif")</td>
                        <td><a href="/Admin/Category/DeleteCategory/@item.id" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/Category/UpdateCategory/@item.id" class="btn btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin/Category/CreateCategory/" class="btn btn-outline-primary">Kategori Ekle</a>
    </div>
</div>

