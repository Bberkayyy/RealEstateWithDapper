@model List<AdminPanelResultAboutUsDetailViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
    int count = 0;
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Hakkımızda Listesi</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Alt Başlık</th>
                    <th scope="col">Açıklama </th>
                    <th scope="col">Alt Açıklama</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.title</td>
                        <td>@item.subtitle</td>
                        <td>@item.description1</td>
                        <td>@item.description2</td>
                        <td><a href="/Admin/AboutUsDetail/DeleteAboutUsDetail/@item.id" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/AboutUsDetail/UpdateAboutUsDetail/@item.id" class="btn btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin/AboutUsDetail/CreateAboutUsDetail/" class="btn btn-outline-primary">Hakkımızda Bilgisi Ekle</a>
    </div>
</div>

