@model List<AdminPanelResultEstateAgentViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
    int count = 0;
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Emlakçı Listesi</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Emlakçı Adı</th>
                    <th scope="col">Unvanı</th>
                    <th scope="col">Mail Adresi</th>
                    <th scope="col">Telefon Numarası</th>
                    <th scope="col">Resmi</th>
                    <th scope="col">Durumu</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.fullName</td>
                        <td>@item.title</td>
                        <td>@item.mail</td>
                        <td>@item.phoneNumber</td>
                        <td><img class="img-fluid" style="height:50px;width:80px" src="@item.imageUrl" alt=""></td>
                        <td>@(item.status ? "Aktif" : "Pasif")</td>
                        <td><a href="/Admin/EstateAgent/DeleteEstateAgent/@item.id" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/EstateAgent/UpdateEstateAgent/@item.id" class="btn btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
        @* <a href="/Admin/EstateAgent/CreateEstateAgent/" class="btn btn-outline-primary">Emlakçı Ekle</a>*@
    </div>
</div>
