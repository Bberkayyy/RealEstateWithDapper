@model List<AdminPanelResultPropertyAmenityViewModel>
@{
    ViewData["Title"] = "SelectPropertyAmenities";
    Layout = "~/Areas/Admin/Views/Default/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">İlana Ait Özellikler Listesi</h4>
                        <p class="card-subtitle mb-4">
                            İlana ait özellikleri aşağıdaki listeden belirleyebilirsiniz.
                        </p>
                        <form method="post">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].Id" />
                                    <input type="hidden" asp-for="@Model[i].AmenityTitle" />
                                    <input type="checkbox" asp-for="@Model[i].DoesHave" class="form-check-input" />
                                    <label class="form-check-label" for="@Model[i].DoesHave">@Model[i].AmenityTitle</label>
                                </div>
                            }
                            <br />
                            <button class="btn btn-success">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

