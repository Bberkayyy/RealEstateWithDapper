@model ResultPropertyDetailsViewModel
@{
    ViewData["Title"] = "PropertyDetail";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";

    string location = ViewBag.location;
    string video = ViewBag.video;
}
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlanlar</li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlan Detayı</li>
        </ul>
    </div>
</section>
<!--/blog-post-->
<section class="w3l-blog post-content py-5">
    <div class="container py-lg-4 py-md-3 py-2">
        @await Component.InvokeAsync("_PropertyDetailHeaderComponentPartial", new { id = @ViewBag.propertyId })
        <div class="row">
            <div class="col-lg-8 w3l-news">
                <div class="blog-single-post">
                    @await Component.InvokeAsync("_PropertyDetailPropertyImagesComponentPartial", new { id = @ViewBag.propertyId })
                    <div class="single-post-content">
                        @await Component.InvokeAsync("_PropertyDetailPropertyDescriptionComponentPartial", new { id = @ViewBag.propertyId })
                        @await Component.InvokeAsync("_PropertyDetailPropertyDetailsComponentPartial", new { id = @ViewBag.propertyId })
                        @await Component.InvokeAsync("_PropertyDetailPropertyAmenitiesComponentPartial", new { id = @ViewBag.propertyId })
                    </div>

                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">Lokasyon</h3>
                        <div class="agent-map">
                            @if (!string.IsNullOrEmpty(location))
                            {
                                <iframe src="@location"
                                        frameborder="0" style="border:0" allowfullscreen=""></iframe>
                            }
                            else
                            {
                                <p>Lokasyon bulunamadı.</p>
                            }
                        </div>
                    </div>

                    <div class="single-bg-white mb-0">
                        <h3 class="post-content-title mb-4">Video</h3>
                        <div class="post-content">
                            @if (!string.IsNullOrEmpty(video))
                            {
                                <iframe src="@video" frameborder="0"
                                        allowfullscreen=""></iframe>
                            }
                            else
                            {
                                <p>Video bulunamadı.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="sidebar-side col-lg-4 col-md-12 col-sm-12 mt-lg-0 mt-5">
                <aside class="sidebar">
                    @await Component.InvokeAsync("_PropertyDetailPropertyAgentComponentPartial", new { id = @ViewBag.propertyId })
                    @await Component.InvokeAsync("_PropertyDetailPropertyAgentLast3AdvertComponentPartial", new { id = @ViewBag.propertyId })            
                </aside>
            </div>
        </div>
    </div>
</section>